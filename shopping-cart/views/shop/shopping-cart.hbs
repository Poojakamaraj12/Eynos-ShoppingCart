{{# if products}}
<div class="row">
  <div class="col-sm-6 col-md-offset-4 col-md-offset-4 col-sm-offset-3">
    <ul class="list-group">
      {{# each products }}
      <li class="list-group-item">
         <span class="badge">{{ this.qty }}</span>
     <strong>{{this.item.name}}</strong>
     <span class="label label-success">{{this.price}}</span>
     <div class="btn-group">
       <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
     <ul class="dropdown-menu">
     <li><a href="#"> - </a></li>
     <li><a href="#">clear</a></li>
</ul>
     </div>
       </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-offset-4 col-md-offset-4 col-sm-offset-3">
  <strong>Total:{{totalPrice}} </strong>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6 col-md-offset-4 col-md-offset-4 col-sm-offset-3">
<button type="button" class="btn btn-success">Checkout</button>
  </div>
</div>
{{else}}
<div class="row">
  <div class="col-sm-6 col-md-offset-4 col-md-offset-4 col-sm-offset-3">
<strong>No items in the cart! </strong>
  </div>
{{/if}}
</div>
