{{# each products }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{ this.name }}</h3>
        <div class="price">{{ this.price }}</div>
        <p><a href="/add-to-cart/{{this._id}}" class="btn btn-success btn-primary pull-left" role="button">Add to cart</a>
           <a href="#" class="btn btn-default" role="button">+</a>
           <a href="#" class="btn btn-default" role="button">-</a></p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/ each}}
